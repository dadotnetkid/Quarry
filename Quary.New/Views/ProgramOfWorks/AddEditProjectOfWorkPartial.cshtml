@model SummaryProgramOfWorks
@{
    int? programOfWorkId = ViewBag.ProgramOfWorkId;
}
<div class="row">
    <div class="col-md-12 col-lg-12">
        @{
            Html.DevExpress().ComboBoxFor(m => m.ParticularId, settings =>
            {
                settings.Properties.NullText = "Particular";
                settings.Width = Unit.Percentage(100);
                settings.Properties.CaptionSettings.Position = EditorCaptionPosition.Left;
                settings.Properties.Caption = "Particular";
                settings.ShowModelErrors = true;
                settings.Properties.ValidationSettings.Display = Display.Dynamic;
                settings.Properties.TextField = "Particular";
                settings.Properties.ValueField = "Id";
            }).BindList(new UnitOfWork().ParticularsRepo.Get()).GetHtml();
        }
    </div>

</div>
<div class="row">
    <div class="col-md-12 col-lg-12">
        @{
            Html.DevExpress().ComboBoxFor(m => m.SagId, settings =>
            {
                settings.Properties.NullText = "Sag";
                settings.Width = Unit.Percentage(100);
                settings.Properties.CaptionSettings.Position = EditorCaptionPosition.Left;
                settings.Properties.Caption = "Sag";
                settings.ShowModelErrors = true;
                settings.Properties.ValidationSettings.Display = Display.Dynamic;
                settings.Properties.TextField = "Sag";
                settings.Properties.ValueField = "Id";
            }).BindList(new UnitOfWork().SagsRepo.Get()).GetHtml();
        }
    </div>

</div>
<div class="row">
    <div class="col-md-12 col-lg-12">
        @{
            Html.DevExpress().SpinEditFor(m => m.Quantity, settings =>
            {
                settings.Properties.NullText = "Qty";
                settings.Width = Unit.Percentage(100);
                settings.Properties.CaptionSettings.Position = EditorCaptionPosition.Left;
                settings.Properties.Caption = "Qty";
                settings.ShowModelErrors = true;
                settings.Properties.ValidationSettings.Display = Display.Dynamic;
            }).GetHtml();
        }
    </div>

</div>
<div class="row margin-top-10">
    <div class="col-lg-12 col-md-12 ">
        @{
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnSubmit";
                settings.Text = "Submit";
                settings.ClientSideEvents.Click = "function(s,e){SummaryProgramOfWorkGridView.UpdateEdit()}";
            }).GetHtml();
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnCancel";
                settings.Text = "Cancel";
                settings.ControlStyle.CssClass = "margin-left-10";
                settings.ClientSideEvents.Click = "function(s,e){SummaryProgramOfWorkGridView.CancelEdit()}";
            }).GetHtml();
        }
    </div>
</div>


