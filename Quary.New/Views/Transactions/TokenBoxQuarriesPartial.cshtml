
@model IEnumerable<Quarries>
@{
    Html.DevExpress().TokenBox(settings =>
    {
        settings.Name = "quarryIds";
        settings.Properties.Caption = "Quarries";
        settings.Width = Unit.Percentage(100);
        settings.CallbackRouteValues = new { Controller = "Transactions", Action = "TokenBoxQuarriesPartial", quarryId = ViewBag.QuarryId };
        settings.Properties.TextField = "QuarryName";
        settings.Properties.ValueField = "Id";
        settings.PreRender = (s, e) =>
        {
            var tkb = s as MVCxTokenBox;
            if (Model != null)
                foreach (var i in Model)
                {
                    tkb.Tokens.Add(i.QuarryName);
                }

        };
    }).BindList(ViewBag.QuarriesRepo).GetHtml();
}
