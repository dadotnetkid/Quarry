
@model TransactionPenalties

@{
    int? permiteeId = ViewBag.PermiteeId;
    Vehicles vehicles = ViewBag.Vehicle as Vehicles;
    string transactionId = ViewBag.TransactionId;
}
<input type="hidden" name="TransactionId" value="@ViewBag.TransactionId" />


<div class="row ">
    <div class="col-lg-4">
        @{
            Html.DevExpress().TextBoxFor(m => m.Penalty, settings =>
            {
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "Penalty";
            }).GetHtml();
        }
    </div>
</div>

<div class="row ">
    <div class="col-lg-4">
        @{
            Html.DevExpress().SpinEditFor(m => m.Amount, settings =>
            {
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "Cost";
                settings.Properties.DisplayFormatString = "N2";
                settings.Properties.SpinButtons.ShowLargeIncrementButtons = false;
                settings.Properties.SpinButtons.ShowIncrementButtons = false;
                settings.Properties.Increment = 1;

                settings.Properties.NumberType = SpinEditNumberType.Float;
                settings.Properties.DisplayFormatString = "f2";
            }).Bind( Model?.Amount).GetHtml();
        }
    </div>
</div>

<div class="row margin-top-10">
    <div class="col-lg-12">

        @{
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnSubmitPenaltiesTransaction";
                settings.Text = "Submit";
                settings.ClientSideEvents.Click = "function(s,e){PenaltiesGridView.UpdateEdit()}";
            }).GetHtml();
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnCancelPenaltiesTransaction";
                settings.Text = "Cancel";
                settings.ClientSideEvents.Click = "function(s,e){PenaltiesGridView.CancelEdit()}";
            }).GetHtml();
        }

    </div>
</div>