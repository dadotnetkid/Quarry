@model Items
<div class="row">
    <div class="col-md-12 col-lg-12">
        @{
            Html.DevExpress().TextBoxFor(m => m.ItemName, settings =>
            {
                settings.Properties.NullText = "Item Name";
                settings.Width = Unit.Percentage(100);

                settings.Properties.Caption = "Item Name";
                settings.ShowModelErrors = true;
                settings.Properties.ValidationSettings.Display = Display.Dynamic;
            }).GetHtml();
        }
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-lg-12">
        @{
            Html.DevExpress().ComboBoxFor(m => m.UnitMeasureId, settings =>
            {
                settings.Properties.NullText = "Unit Measure";
                settings.Width = Unit.Percentage(100);

                settings.Properties.Caption = "Unit Measure";
                settings.ShowModelErrors = true;
                //settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.Text;
                //settings.Properties.ValidationSettings.ErrorTextPosition = ErrorTextPosition.Bottom;
                settings.Properties.ValidationSettings.Display = Display.Dynamic;
                settings.Properties.TextField = "UnitMeasure";
                settings.Properties.ValueField = "Id";
            }).BindList(new UnitOfWork().UnitMeasurementsRepo.Get()).GetHtml();
        }
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-lg-12">
        @{
            Html.DevExpress().SpinEditFor(m => m.UnitCost, settings =>
            {
                settings.Properties.NullText = "Unit Cost";
                settings.Width = Unit.Percentage(100);

                settings.Properties.Caption = "Unit Cost";
                settings.ShowModelErrors = true;

                settings.Properties.ClientSideEvents.KeyUp = "DecimalOnly";
                settings.Properties.EnableClientSideAPI = true;
                settings.Properties.SpinButtons.ShowLargeIncrementButtons = false;
                settings.Properties.SpinButtons.ShowIncrementButtons = false;
                settings.Properties.Increment = 1;
                settings.Properties.DisplayFormatString = @"##.##";
                settings.Properties.NumberType = SpinEditNumberType.Float;

                settings.Properties.ValidationSettings.Display = Display.Dynamic;
            }).GetHtml();
        }
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-lg-12">
        @{
            Html.DevExpress().TextBoxFor(m => m.SortOrder, settings =>
            {
                settings.Properties.NullText = "Sort Order";
                settings.Width = Unit.Percentage(100);

                settings.Properties.Caption = "Sort Order";
                settings.ShowModelErrors = true;

                settings.Properties.ValidationSettings.Display = Display.Dynamic;
            }).GetHtml();
        }
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-lg-12">
        @{
            Html.DevExpress().ComboBoxFor(m => m.CategoryId, settings =>
            {
                settings.Properties.NullText = "Category";
                settings.Width = Unit.Percentage(100);

                settings.Properties.Caption = "Category";
                settings.ShowModelErrors = true;

                settings.Properties.ValidationSettings.Display = Display.Dynamic;
                settings.Properties.TextField = "CategoryName";
                settings.Properties.ValueField = "Id";
            }).BindList(new UnitOfWork().CategoriesRepo.Get()).GetHtml();
        }
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-lg-12">
        @{
            Html.DevExpress().CheckBoxFor(m => m.IsIncludedSurcharge, settings =>
            {
                settings.Width = Unit.Percentage(100);

                settings.Properties.Caption = "Include in Surcharge";
                settings.ShowModelErrors = true;

                settings.Properties.ValidationSettings.Display = Display.Dynamic;

            }).GetHtml();
        }
    </div>
</div>
<div class="row margin-top-10">
    <div class="col-lg-12 col-md-12 ">
        @{
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnSubmit";
                settings.Text = "Submit";
                settings.ClientSideEvents.Click = "function(s,e){TransactionItemsGridView.UpdateEdit()}";
            }).GetHtml();
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnCancel";
                settings.Text = "Cancel";
                settings.ControlStyle.CssClass = "margin-left-10";
                settings.ClientSideEvents.Click = "function(s,e){TransactionItemsGridView.CancelEdit()}";
            }).GetHtml();
        }
    </div>
</div>

