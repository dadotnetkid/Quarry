@model VehicleTypes
<div class="row">
    <div class="col-md-12 col-lg-12">
        @{
            Html.DevExpress().TextBoxFor(m => m.Code, settings =>
            {
                settings.Properties.NullText = "Code";
                settings.Width = Unit.Percentage(100);
                settings.Properties.CaptionSettings.Position = EditorCaptionPosition.Left;
                settings.Properties.Caption = "Code";
                settings.ShowModelErrors = true;
                settings.Properties.ValidationSettings.Display = Display.Dynamic;
            }).GetHtml();
        }
    </div>
    
</div>
<div class="row">
    <div class="col-md-12 col-lg-12">
        @{
            Html.DevExpress().TextBoxFor(m => m.VehicleTypeName, settings =>
            {
                settings.Properties.NullText = @"Vehicle Type Name";
                settings.Width = Unit.Percentage(100);
                settings.Properties.CaptionSettings.Position = EditorCaptionPosition.Left;
                settings.Properties.Caption = "Vehicle Type Name";
                settings.ShowModelErrors = true;
                settings.Properties.ValidationSettings.Display = Display.Dynamic;
            }).GetHtml();
        }
    </div>
    
</div>
<div class="row">
    <div class="col-md-12 col-lg-12">
        @{
            Html.DevExpress().SpinEditFor(m => m.Cost, settings =>
            {
                settings.Properties.NullText = "Cost";
                settings.Width = Unit.Percentage(100);
                settings.Properties.CaptionSettings.Position = EditorCaptionPosition.Left;
                settings.Properties.Caption = "Cost";
                settings.ShowModelErrors = true;

                settings.Properties.SpinButtons.ShowLargeIncrementButtons = false;
                settings.Properties.SpinButtons.ShowIncrementButtons = false;
                settings.Properties.Increment = 1;
                
                settings.Properties.NumberType = SpinEditNumberType.Float;
                settings.Properties.DisplayFormatString = "f2";

                settings.Properties.ValidationSettings.Display = Display.Dynamic;
            }).GetHtml();
        }
    </div>
</div>
<div class="row margin-top-10">
    <div class="col-lg-12 col-md-12 ">
        @{
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnSubmit";
                settings.Text = "Submit";
                settings.ClientSideEvents.Click = "function(s,e){VehicleTypesGridView.UpdateEdit()}";
            }).GetHtml();
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnCancel";
                settings.Text = "Cancel";
                settings.ControlStyle.CssClass = "margin-left-10";
                settings.ClientSideEvents.Click = "function(s,e){VehicleTypesGridView.CancelEdit()}";
            }).GetHtml();
        }
    </div>
</div>


