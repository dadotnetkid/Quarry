<div class=" row ">
    <div class="col-md-12 col-lg-12">
        @{
            Html.DevExpress().ComboBoxFor(m => m.TownId, settings =>
            {
                settings.Properties.NullText = "Town";
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "Town";
                settings.ShowModelErrors = true;
                settings.Properties.ValidationSettings.Display = Display.Dynamic;
                settings.Properties.ValueField = "Id";
                settings.Properties.TextField = "Name";
            }).BindList(new UnitOfWork().TownsRepo.Get()).GetHtml();
        }
    </div>
</div>
<div class="row margin-top-10">
    <div class="col-lg-12 col-md-12 ">
        @{
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnSubmit";
                settings.Text = "Submit";
                settings.ClientSideEvents.Click = "function(s,e){BarangayGridView.UpdateEdit()}";
            }).GetHtml();
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnCancel";
                settings.Text = "Cancel";
                settings.ControlStyle.CssClass = "margin-left-10";
                settings.ClientSideEvents.Click = "function(s,e){BarangayGridView.CancelEdit()}";
            }).GetHtml();
        }
    </div>
</div>
