@model Barangays
<div class="row">
    <div class="col-md-12 col-lg-12">
        @{
            Html.DevExpress().TextBoxFor(m => m.Barangay, settings =>
            {
                settings.Properties.NullText = "Barangay";
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "Barangay";
                settings.ShowModelErrors = true;
                settings.Properties.ValidationSettings.Display = Display.Dynamic;
            }).GetHtml();
        }
    </div>
</div>
