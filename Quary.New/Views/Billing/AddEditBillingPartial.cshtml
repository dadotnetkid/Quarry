@model Billings
<div class="row">
    <div class="col-lg-12">
        @{
            Html.DevExpress().ComboBoxFor(m => m.TransactionId, settings =>
            {
                settings.Properties.Caption = "Transaction Number";
                settings.Properties.TextField = "TransactionNumber";
                settings.Properties.ValueField = "Id";
                
                settings.Width = Unit.Percentage(100);
            }).BindList(new UnitOfWork().TransactionsRepo.Get()).GetHtml();
        }
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @{
            Html.DevExpress().TextBoxFor(m => m.OfficialReceipt, settings =>
            {
                settings.Properties.Caption = "Official Receipt";
                settings.Width = Unit.Percentage(100);
            }).GetHtml();
        }
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        @{
            Html.DevExpress().TextBoxFor(m => m.Amount, settings =>
            {
                settings.Properties.DisplayFormatInEditMode = true;
                settings.Properties.DisplayFormatString = "n2";
                settings.Properties.Caption = "Amount";
                settings.Width = Unit.Percentage(100);
            }).GetHtml();
        }
    </div>
</div>
<div class="row margin-top-10">
    <div class="col-lg-12 col-md-12 ">
        @{
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnSubmit";
                settings.Text = "Submit";
                settings.ClientSideEvents.Click = "function(s,e){BillingGridView.UpdateEdit()}";
            }).GetHtml();
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnCancel";
                settings.Text = "Cancel";
                settings.ControlStyle.CssClass = "margin-left-10";
                settings.ClientSideEvents.Click = "function(s,e){BillingGridView.CancelEdit()}";
            }).GetHtml();
        }
    </div>
</div>

